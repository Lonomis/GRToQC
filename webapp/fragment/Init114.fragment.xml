<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form">
    <f:Form editable="true">
        <f:layout>
            <f:ResponsiveGridLayout 
                labelSpanXL="3"
                labelSpanL="3"
                labelSpanM="3"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="4"
                emptySpanL="4"
                emptySpanM="4"
                emptySpanS="0"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="false"/>
        </f:layout>
        <f:formContainers>
            <f:FormContainer>
                <f:formElements>
                    <f:FormElement>
                        <f:label>
                            <Label  text="{i18n>productionOrder}"
                                    design="Bold"/>
                        </f:label>
                        <f:fields>
                            <Text   text="{input>/ProductionOrder}">
                                <layoutData>
                                    <l:GridData span="L4 M4 S8"/>
                                </layoutData>
                            </Text>
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement >
                        <f:label>
                            <Label  text="{i18n>orderType}"
                                    design="Bold"/>
                        </f:label>
                        <f:fields>
                            <Text  text="{input>/OrderType}">
                                <layoutData>
                                    <l:GridData span="L4 M4 S8"/>
                                </layoutData>
                            </Text>
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement>
                        <f:label>
                            <Label  text="{i18n>wbs}"
                                    design="Bold"/>
                        </f:label>
                        <f:fields>
                            <Text   text="{input>/WBS}"/>
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement>
                        <f:label>
                            <Label  text="{i18n>material}"
                                    design="Bold"/>
                        </f:label>
                        <f:fields>
                            <Text   text="{input>/Material}"/>
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement>
                        <f:label>
                            <Label  text="{i18n>materialName}"
                                    design="Bold"/>
                        </f:label>
                        <f:fields>
                            <Text   text="{input>/MaterialName}"/>
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement>
                        <f:label>
                            <Label  text="{i18n>qty}"
                                    design="Bold"/>
                        </f:label>
                        <f:fields>
                            <Text   text="{input>/Quantity}"/>
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement>
                        <f:label>
                            <Label  text="{=${i18n>moveToSloc}}"
                                    design="Bold"/>
                        </f:label>
                        <f:fields>
                            <Input  value="{input>/StorageLocation}"
                                    showValueHelp="true"
                                    type="Text"
                                    maxLength="4"
                                    required="true"
                                    valueHelpRequest="onSlocSearchQC">
                                <layoutData>
                                    <l:GridData span="L3 M3 S6"/>
                                </layoutData>
                                <customData>
                                    <core:CustomData    key="required"
                                                        value="true"
                                                        writeToDom="true"/>
                                    <core:CustomData    key="name"
                                                        value="{=${i18n>moveToSloc}}"
                                                        writeToDom="true"/>
                                    <core:CustomData    key="input"
                                                        value="true"
                                                        writeToDom="true"/>
                                </customData>
                            </Input>
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement>
                        <f:fields>
                            <Button press="onScanSloc"
                                    icon="sap-icon://bar-code"
                                    visible="{= ${barcode>/available}}">
                                <layoutData>
                                    <l:GridData span="L2 M2 S3"/>
                                </layoutData>
                            </Button>
                        </f:fields>
                    </f:FormElement>
                </f:formElements>
            </f:FormContainer>
        </f:formContainers>
    </f:Form>
</core:FragmentDefinition>