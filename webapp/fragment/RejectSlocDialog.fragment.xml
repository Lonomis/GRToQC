        title="{i18n>rejectStorageLocationDialogTitle}"
        class="sapUiPopupWithPadding"
        items="{rejectSloc>/SlocList}"
        search="onSearch"
        confirm="onSlocChoose">
        <items>
            <StandardListItem
                title="{rejectSloc>StorageLocation}"
                description="{rejectSloc>StorageLocationName}"/>
        </items>
    </SelectDialog>
</core:FragmentDefinition>